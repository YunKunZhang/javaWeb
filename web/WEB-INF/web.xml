<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    //配置标签库
    <jsp-config>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
            <taglib-location>/WEB-INF/fmt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
            <taglib-location>/WEB-INF/c.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/x</taglib-uri>
            <taglib-location>/WEB-INF/x.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://java.sun.com/jsp/jstl/fn</taglib-uri>
            <taglib-location>/WEB-INF/fn.tld</taglib-location>
        </taglib>
    </jsp-config>

    <session-config><session-timeout>10</session-timeout></session-config>

    //设置欢迎界面
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    //设置登录请求验证
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    //设置修改密码请求验证
    <servlet>
        <servlet-name>ChangeServlet</servlet-name>
        <servlet-class>Servlets.ChangeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChangeServlet</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>

    //设置进入主界面请求验证
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>Servlets.indexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    //设置过滤器防止用户直接访问内部资源
   <filter>
       <filter-name>innerFilter</filter-name>
       <filter-class>Filters.innerFilter</filter-class>
   </filter>

    <filter-mapping>
        <filter-name>innerFilter</filter-name>
        <url-pattern>/jsp/*</url-pattern>
    </filter-mapping>

    //设置过滤器防止用户越过表单直接登录
    <filter>
        <filter-name>outerFilter</filter-name>
        <filter-class>Filters.outerFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>outerFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

    //用于处理主页面中选择其他页面的请求信息
    <servlet>
        <servlet-name>choosePageServlet</servlet-name>
        <servlet-class>Servlets.choosePageServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>choosePageServlet</servlet-name>
        <url-pattern>/choose</url-pattern>
    </servlet-mapping>

    //用于处理修改个人信息页面的请求信息
    <servlet>
        <servlet-name>ModifyInfoServlet</servlet-name>
        <servlet-class>Servlets.ModifyInfoServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ModifyInfoServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
</web-app>
